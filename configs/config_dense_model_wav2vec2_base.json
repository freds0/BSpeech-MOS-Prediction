{
    "name": "DenseModel_with_VCC2018_wav2vec2_base",
    "n_gpu": 1,

    "arch": {
        "type": "dense_model",
        "args": {
            "input_dim": 512
        }
    },
    "data_loader": {
        "type": "EmbeddingsDataloader",
        "args":{
            "data_dir": "./embeddings/VCC2018_wav2vec-base_embeddings/",
            "metadata_file": "train.csv",
            "val_metadata_file": "test.csv",
            "emb_dir": "data",
            "train_batch_size": 15000,
            "val_batch_size": 15000,
            "shuffle": false
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 100,
            "gamma": 0.01
        }
    },
    "trainer": {
        "save_dir": "checkpoints",
        "n_checkpoints": 2,
        "log_dir": "logs",
        "log_step": 25,
        "save_period": 10,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 100,
        "epochs": 500,
        "tensorboard": true
    }
}
