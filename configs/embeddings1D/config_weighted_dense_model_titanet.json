{
    "name": "DenseModel_with_VCC2018_titanet",
    "n_gpu": 1,

    "arch": {
        "type": "EmbeddingFullyConnected",
        "args": {
            "input_dim": 192
        }
    },
    "data_loader": {
        "type": "WeightedEmbeddingsDataloader",
        "args":{
            "data_dir": "./embeddings/VCC2018_embeddings_titanet/",
            "metadata_file": "train.csv",
            "val_metadata_file": "test.csv",
            "emb_dir": "data",
            "train_batch_size": 128,
            "val_batch_size": 128,
            "shuffle": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "weighted_l1_loss",
    "metrics": [
        "spearman_corr", "pearson_corr"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 100,
            "gamma": 0.01
        }
    },
    "trainer": {
        "save_dir": "checkpoints",
        "n_checkpoints": 2,
        "log_dir": "logs",
        "log_step": 25,
        "save_period": 1,
        "verbosity": 2,
        "monitor": "max|spearman_corr",
        "early_stop": 30,
        "epochs": 500,
        "tensorboard": true
    }
}
